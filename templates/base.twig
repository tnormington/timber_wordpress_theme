{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	<link href="https://fonts.googleapis.com/css?family=Monoton|Quicksand:400,700" rel="stylesheet">
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{% include 'svg-icons.twig' %}
		<header class="header" >
			 {% include 'header-svg-mobile.twig' %} 
			{# {% include 'header-svg.twig' %} #}
			{% block header %}
				<div class="wrapper">
					<button class="mobile-menu-toggle" id="mobile-menu-toggle">
						<span class="menu-toggle-bar top"></span>
						<span class="menu-toggle-bar mid"></span>
						<span class="menu-toggle-bar bot"></span>
					</button>
					<div class="hdr-logo" role="banner">
						<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
					</div>
					<nav id="nav-main" class="nav-main" role="navigation">
						{% include "menu.twig" with {'menu': menu.get_items} %}
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		{% if cart_count %}
			<div class="persistant-cart">
				<a href="/cart" class="cta cta-icon cta-icon-cart"><span class="cart-count">{{ cart_count }}</span>View Cart</a>
			</div>
		{% endif %}

		{% block hero %}
			
		{% endblock %}

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1 class="page-title">{{title}}</h1>{% endif %}
			<div class="wrapper title-{{wp_title|lower}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer class="footer" id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
		{# <script src="https://cdnjs.cloudflare.com/ajax/libs/parallax/2.1.3/parallax.min.js"></script> #}
	</body>
</html>
