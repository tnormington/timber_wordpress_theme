{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="page-title">{{post.title}}</h1>
				<span class="date {{post.type|lower}}__date">{{ post.post_date|date('M d, Y')}}</span>
                <div class="post__categories">
                    {% for category in post.terms('categories') %}
                        {% include 'category.twig' %}
                    {% endfor %}
                </div>
                <div class="hr hr-short-chubby hr-teal"></div>
                <img class="sketchbook__featured-image" src="{{ post.thumbnail.src('full') }}">
                {% if post.content %}
                    <div class="hr hr-double hr-teal"></div>
                    <div class="article-body">
                        {{post.content}}
                    </div>
                {% endif %}
                <div class="hr hr-short-chubby hr-teal"></div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}